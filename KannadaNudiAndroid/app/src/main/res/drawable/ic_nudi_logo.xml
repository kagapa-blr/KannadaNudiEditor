<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle Shape -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>
    <!-- Top Half (Yellow) -->
    <item android:top="0dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="@color/karnataka_yellow"/>
        </shape>
    </item>
    <!-- Bottom Half (Red) -->
    <item android:top="12dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/karnataka_red"/>
        </shape>
    </item>
</layer-list>
