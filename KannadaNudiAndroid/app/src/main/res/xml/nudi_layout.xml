<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="60dp">

    <!-- Row 1: Q-P (Normal: ಟ ಡ ಎ ರ ತ ಯ ಉ ಇ ಒ ಪ) -->
    <Row>
        <Key android:codes="113" android:keyLabel="ಟ" android:popupCharacters="ಠ" android:keyEdgeFlags="left"/>
        <Key android:codes="119" android:keyLabel="ಡ" android:popupCharacters="ಢ"/>
        <Key android:codes="101" android:keyLabel="ಎ" android:popupCharacters="ಏ"/>
        <Key android:codes="114" android:keyLabel="ರ" android:popupCharacters="ಋ"/>
        <Key android:codes="116" android:keyLabel="ತ" android:popupCharacters="ಥ"/>
        <Key android:codes="121" android:keyLabel="ಯ" android:popupCharacters="ಐ"/>
        <Key android:codes="117" android:keyLabel="ಉ" android:popupCharacters="ಊ"/>
        <Key android:codes="105" android:keyLabel="ಇ" android:popupCharacters="ಈ"/>
        <Key android:codes="111" android:keyLabel="ಒ" android:popupCharacters="ಓ"/>
        <Key android:codes="112" android:keyLabel="ಪ" android:popupCharacters="ಫ" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 2: A-L (Normal: ಅ ಸ ದ ್ ಗ ಹ ಜ ಕ ಲ) -->
    <Row>
        <Key android:codes="97" android:keyLabel="ಅ" android:popupCharacters="ಆ" android:keyEdgeFlags="left"/>
        <Key android:codes="115" android:keyLabel="ಸ" android:popupCharacters="ಶ"/>
        <Key android:codes="100" android:keyLabel="ದ" android:popupCharacters="ಧ"/>
        <Key android:codes="102" android:keyLabel="್" android:popupCharacters="್"/>
        <Key android:codes="103" android:keyLabel="ಗ" android:popupCharacters="ಘ"/>
        <Key android:codes="104" android:keyLabel="ಹ" android:popupCharacters="ಃ"/>
        <Key android:codes="106" android:keyLabel="ಜ" android:popupCharacters="ಝ"/>
        <Key android:codes="107" android:keyLabel="ಕ" android:popupCharacters="ಖ"/>
        <Key android:codes="108" android:keyLabel="ಲ" android:popupCharacters="ಳ" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 3: Z-M (Normal: ಞ ಷ ಚ ವ ಬ ನ ಮ) -->
    <Row>
        <Key android:codes="-1" android:keyLabel="SHIFT" android:keyWidth="15%p" android:isModifier="true" android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="122" android:keyLabel="ಞ" android:popupCharacters="ಙ"/>
        <Key android:codes="120" android:keyLabel="ಷ" android:popupCharacters="ಷ"/>
        <Key android:codes="99" android:keyLabel="ಚ" android:popupCharacters="ಚ"/>
        <Key android:codes="118" android:keyLabel="ವ" android:popupCharacters="ವ"/>
        <Key android:codes="98" android:keyLabel="ಬ" android:popupCharacters="ಬ"/>
        <Key android:codes="110" android:keyLabel="ನ" android:popupCharacters="ಣ"/>
        <Key android:codes="109" android:keyLabel="ಮ" android:popupCharacters="ಮ"/>
        <Key android:codes="-5" android:keyLabel="DEL" android:keyWidth="15%p" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 4: Numbers, Mic, Space, Switch, Done -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="123" android:keyWidth="15%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-102" android:keyLabel="MIC" android:keyWidth="10%p"/>
        <Key android:codes="32" android:keyLabel="SPACE" android:keyWidth="40%p"/>
        <Key android:codes="-201" android:keyLabel="ABC" android:keyWidth="15%p"/> <!-- Switch to Qwerty/Baraha -->
        <Key android:codes="-4" android:keyLabel="DONE" android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>
