<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="60dp">

    <!-- Row 1: Shifted Q-P (ಠ ಢ ಏ ಋ ಥ ಐ ಊ ಈ ಓ ಫ) -->
    <Row>
        <Key android:codes="81" android:keyLabel="ಠ" android:keyEdgeFlags="left"/>
        <Key android:codes="87" android:keyLabel="ಢ"/>
        <Key android:codes="69" android:keyLabel="ಏ"/>
        <Key android:codes="82" android:keyLabel="ಋ"/>
        <Key android:codes="84" android:keyLabel="ಥ"/>
        <Key android:codes="89" android:keyLabel="ಐ"/>
        <Key android:codes="85" android:keyLabel="ಊ"/>
        <Key android:codes="73" android:keyLabel="ಈ"/>
        <Key android:codes="79" android:keyLabel="ಓ"/>
        <Key android:codes="80" android:keyLabel="ಫ" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 2: Shifted A-L (ಆ ಶ ಧ ್ ಘ ಃ ಝ ಖ ಳ) -->
    <Row>
        <Key android:codes="65" android:keyLabel="ಆ" android:keyEdgeFlags="left"/>
        <Key android:codes="83" android:keyLabel="ಶ"/>
        <Key android:codes="68" android:keyLabel="ಧ"/>
        <Key android:codes="70" android:keyLabel="್"/>
        <Key android:codes="71" android:keyLabel="ಘ"/>
        <Key android:codes="72" android:keyLabel=":" /> <!-- Visarga -->
        <Key android:codes="74" android:keyLabel="ಝ"/>
        <Key android:codes="75" android:keyLabel="ಖ"/>
        <Key android:codes="76" android:keyLabel="ಳ" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 3: Shifted Z-M (ಙ ಷ ಚ ವ ಬ ಣ ಮ) -->
    <Row>
        <Key android:codes="-1" android:keyLabel="SHIFT" android:keyWidth="15%p" android:isModifier="true" android:isSticky="true" android:keyEdgeFlags="left"/>
        <Key android:codes="90" android:keyLabel="ಙ"/>
        <Key android:codes="88" android:keyLabel="ಷ"/>
        <Key android:codes="67" android:keyLabel="ಚ"/>
        <Key android:codes="86" android:keyLabel="ವ"/>
        <Key android:codes="66" android:keyLabel="ಬ"/>
        <Key android:codes="78" android:keyLabel="ಣ"/>
        <Key android:codes="77" android:keyLabel="ಮ"/>
        <Key android:codes="-5" android:keyLabel="DEL" android:keyWidth="15%p" android:isRepeatable="true" android:keyEdgeFlags="right"/>
    </Row>

    <!-- Row 4: Numbers, Mic, Space, Switch, Done -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="123" android:keyWidth="15%p" android:keyEdgeFlags="left"/>
        <Key android:codes="-102" android:keyLabel="MIC" android:keyWidth="10%p"/>
        <Key android:codes="32" android:keyLabel="SPACE" android:keyWidth="40%p"/>
        <Key android:codes="-201" android:keyLabel="ABC" android:keyWidth="15%p"/> <!-- Switch to Qwerty -->
        <Key android:codes="-4" android:keyLabel="DONE" android:keyWidth="20%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>
