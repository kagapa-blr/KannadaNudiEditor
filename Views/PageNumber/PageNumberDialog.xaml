<Window x:Class="KannadaNudiEditor.Views.PageNumber.PageNumberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insert Page Number"
        MinHeight="260"
        MinWidth="360"
        Height="Auto"
        Width="Auto"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FAFAFA"
        FontFamily="NudiParijataha"
        FontSize="14">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Number Type -->
        <TextBlock Grid.Row="0"
                   Text="Choose page number type:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0,0,0,12">
            <RadioButton x:Name="rbCurrentPage"
                         Content="Current Page Number"
                         IsChecked="True"
                         Margin="0,4"
                         Checked="RadioButton_Checked"/>
            <RadioButton x:Name="rbTotalPages"
                         Content="Total Pages"
                         Margin="0,4"
                         Checked="RadioButton_Checked"/>
        </StackPanel>

        <!-- Position -->
        <TextBlock Grid.Row="3"
                   Text="Select position:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,12">
            <RadioButton x:Name="rbTop"
                         Content="Top of Page"
                         IsChecked="True"
                         Margin="0,0,20,0"
                         Checked="RadioButton_Checked"/>
            <RadioButton x:Name="rbBottom"
                         Content="Bottom of Page"
                         Checked="RadioButton_Checked"/>
        </StackPanel>

        <!-- Preview -->
        <TextBlock Grid.Row="6"
                   Text="Preview:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,6"/>

        <Border Grid.Row="7"
                BorderBrush="#C4C4C4"
                BorderThickness="1"
                CornerRadius="4"
                Background="White"
                Padding="8"
                Margin="0,0,0,12">
            <!-- Use a Grid with RowDefinitions to allow vertical movement -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="tbPreview"
                           Text="Page 1"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           Foreground="#444"
                           Grid.Row="1"/>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Insert"
                    Width="100"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="InsertButton_Click"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
            <Button Content="Cancel"
                    Width="100"
                    Height="32"
                    Click="CancelButton_Click"
                    Background="#E5E5E5"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
