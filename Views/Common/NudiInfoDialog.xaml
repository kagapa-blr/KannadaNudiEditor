<Window x:Class="KannadaNudiEditor.Views.Common.NudiInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        MinWidth="300"
        MinHeight="150"
        MaxWidth="600"
        MaxHeight="400"
        Width="360"
        Height="180"
        Background="#FAFAFA"
        ShowInTaskbar="False">

    <Border BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="10"
            Padding="20"
            Background="White"
            SnapsToDevicePixels="True">
        <DockPanel LastChildFill="True">

            <!-- Message Section -->
            <StackPanel DockPanel.Dock="Top">
                <!-- Header -->
                <TextBlock x:Name="HeaderText"
                           Text="Information"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>

                <!-- Message -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="200">
                    <TextBlock x:Name="MessageText"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#555555"
                               TextAlignment="Center"/>
                </ScrollViewer>
            </StackPanel>

            <!-- OK Button -->
            <Button Content="OK"
                    DockPanel.Dock="Bottom"
                    Width="100"
                    Height="32"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Background="#3B82F6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderBrush="#3B82F6"
                    BorderThickness="1"
                    Cursor="Hand"
                    Click="OkButton_Click"/>
        </DockPanel>
    </Border>
</Window>
