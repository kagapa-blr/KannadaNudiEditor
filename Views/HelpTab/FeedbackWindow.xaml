<Window x:Class="KannadaNudiEditor.Views.HelpTab.HelpFeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:KannadaNudiEditor.Views.HelpTab"
        Title="{DynamicResource FeedbackTitle}"
        WindowStartupLocation="CenterScreen"
        MinHeight="500"
        MinWidth="600"
        Height="Auto"
        Width="Auto"
        Background="#F5F7FA"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>

        <!-- FIXED Watermark TextBox -->
        <Style x:Key="WatermarkTextBox"
               TargetType="TextBox">
            <Setter Property="Padding"
                    Value="12,10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="BorderBrush"
                    Value="#D1D5DB"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">

                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost"
                                                  VerticalAlignment="Center"/>

                                    <!-- Placeholder -->
                                    <TextBlock x:Name="WatermarkTextBlock"
                                               Text="{TemplateBinding Tag}"
                                               Foreground="#9CA3AF"
                                               Margin="{TemplateBinding Padding}"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               Visibility="Collapsed"/>
                                </Grid>

                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- Show watermark ONLY when Text is empty -->
                            <Trigger Property="Text"
                                     Value="">
                                <Setter TargetName="WatermarkTextBlock"
                                        Property="Visibility"
                                        Value="Visible"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </Window.Resources>

    <!-- Main Layout -->
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="12"
                Padding="24"
                BorderBrush="#E5E7EB"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Email Label -->
                <TextBlock Grid.Row="0"
                           Text="{DynamicResource EmailLabel}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>

                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox"
                         Grid.Row="1"
                         Height="42"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="youremail@example.com"
                         Margin="0,0,0,16"/>

                <!-- Feedback Label -->
                <TextBlock Grid.Row="2"
                           Text="{DynamicResource FeedbackLabel}"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,8"/>

                <!-- Feedback Input -->
                <TextBox x:Name="FeedbackTextBox"
                         Grid.Row="3"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         MinHeight="160"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="{DynamicResource FeedbackEmailPlaceholder}"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">

                    <Button x:Name="SubmitButton"
                            Content="{DynamicResource Submit}"
                            Height="42"
                            Width="140"
                            Margin="0,0,12,0"
                            Background="#3B82F6"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="SubmitFeedback_Click"/>

                    <Button Content="{DynamicResource Close}"
                            Height="42"
                            Width="140"
                            Background="White"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Click="CloseWindow_Click"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
