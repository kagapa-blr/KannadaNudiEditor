<Window x:Class="KannadaNudiEditor.Views.HelpTab.HelpFeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource FeedbackTitle}" Height="450" Width="520"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">

        <!-- Email Label and TextBox -->
        <TextBlock Text="{DynamicResource EmailLabel}" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="EmailTextBox" Width="460" Height="30" Margin="0,0,0,15"/>

        <!-- Feedback Label and TextBox -->
        <TextBlock Text="{DynamicResource FeedbackLabel}" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="FeedbackTextBox" Width="460" Height="150" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

        <!-- Submit Button -->
        <Button Content="{DynamicResource Submit}" Width="120" Height="35" HorizontalAlignment="Center" Click="SubmitFeedback_Click"/>

        <!-- Close Button -->
        <Button Content="{DynamicResource Close}" Width="120" Height="35" HorizontalAlignment="Center" Margin="0,10,0,0" Click="CloseWindow_Click"/>
    </StackPanel>
</Window>
