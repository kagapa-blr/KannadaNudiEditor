<Window x:Class="KannadaNudiEditor.Views.HelpTab.AboutNudiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AboutNudiTitle}" Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#FAFAFA">

    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Padding="20" Background="White" SnapsToDevicePixels="True">
        <StackPanel>
            <TextBlock Text="{DynamicResource AboutNudiHeader}" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#333333" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="{DynamicResource AboutNudiDescription}" 
                       TextWrapping="Wrap" 
                       FontSize="14" 
                       Foreground="#555555"
                       Margin="0,0,0,20"/>

            <Button Content="{DynamicResource CloseButton}" 
                    Width="100" 
                    Height="30" 
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"
                    Background="#007ACC" 
                    Foreground="White" 
                    FontWeight="Bold"
                    BorderBrush="#007ACC"/>
        </StackPanel>
    </Border>
</Window>
