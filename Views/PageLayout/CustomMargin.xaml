<Window x:Class="KannadaNudiEditor.CustomMargin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource EnterMarginsTitle}"
        Width="520"
        Height="480"
        MinWidth="500"
        MinHeight="450"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        WindowStyle="SingleBorderWindow">


        <Border CornerRadius="10"
                Padding="16"
                Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- Instruction -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Unit Caption -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Tip -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Unit Selector -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Left -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Top -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Right -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Bottom -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Info Message -->
                                        <RowDefinition Height="*"/>
                                        <!-- Spacer -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- Buttons -->
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Instruction -->
                                <TextBlock Grid.Row="0"
                                           Grid.ColumnSpan="2"
                                           Text="{DynamicResource EnterMarginInstruction}"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#333"
                                           Margin="0,0,0,12"/>

                                <!-- Unit Selection Caption -->
                                <TextBlock Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Text="{DynamicResource SelectUnitCaption}"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#555"
                                           Margin="0,0,0,2"/>

                                <!-- Tip -->
                                <TextBlock Grid.Row="2"
                                           Grid.ColumnSpan="2"
                                           Text="{DynamicResource UnitTipText}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <!-- Unit Selector -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="{DynamicResource UnitSelectUnit}"
                                           VerticalAlignment="Center"
                                           Margin="0,4"/>
                                <ComboBox Grid.Row="3"
                                          Grid.Column="1"
                                          x:Name="MarginUnitSelector"
                                          Height="28"
                                          Margin="0,4"
                                          SelectedIndex="2">
                                        <ComboBoxItem Content="{DynamicResource UnitCentimeters}"
                                                      Tag="cm"/>
                                        <ComboBoxItem Content="{DynamicResource UnitMillimeters}"
                                                      Tag="mm"/>
                                        <ComboBoxItem Content="{DynamicResource UnitInches}"
                                                      Tag="in"/>
                                </ComboBox>

                                <!-- Left Margin -->
                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Text="{DynamicResource LeftLabel}"
                                           VerticalAlignment="Center"
                                           Margin="0,4"/>
                                <TextBox Grid.Row="4"
                                         Grid.Column="1"
                                         x:Name="LeftMarginTextBox"
                                         Height="28"
                                         Margin="0,4"/>

                                <!-- Top Margin -->
                                <TextBlock Grid.Row="5"
                                           Grid.Column="0"
                                           Text="{DynamicResource TopLabel}"
                                           VerticalAlignment="Center"
                                           Margin="0,4"/>
                                <TextBox Grid.Row="5"
                                         Grid.Column="1"
                                         x:Name="TopMarginTextBox"
                                         Height="28"
                                         Margin="0,4"/>

                                <!-- Right Margin -->
                                <TextBlock Grid.Row="6"
                                           Grid.Column="0"
                                           Text="{DynamicResource RightLabel}"
                                           VerticalAlignment="Center"
                                           Margin="0,4"/>
                                <TextBox Grid.Row="6"
                                         Grid.Column="1"
                                         x:Name="RightMarginTextBox"
                                         Height="28"
                                         Margin="0,4"/>

                                <!-- Bottom Margin -->
                                <TextBlock Grid.Row="7"
                                           Grid.Column="0"
                                           Text="{DynamicResource BottomLabel}"
                                           VerticalAlignment="Center"
                                           Margin="0,4"/>
                                <TextBox Grid.Row="7"
                                         Grid.Column="1"
                                         x:Name="BottomMarginTextBox"
                                         Height="28"
                                         Margin="0,4"/>

                                <!-- Info Message -->
                                <Border Grid.Row="8"
                                        Grid.ColumnSpan="2"
                                        Background="#E8F5E9"
                                        BorderBrush="#A5D6A7"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,12,0,0">
                                        <TextBlock Text="{DynamicResource CurrentMarginInfo}"
                                                   FontSize="12"
                                                   Foreground="#2E7D32"
                                                   FontStyle="Italic"
                                                   TextWrapping="Wrap"/>
                                </Border>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="10"
                                            Grid.ColumnSpan="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,20,0,0">
                                        <Button Content="{DynamicResource OkButton}"
                                                Width="90"
                                                Height="30"
                                                Margin="5"
                                                Click="Ok_Click"/>
                                        <Button Content="{DynamicResource CancelButton}"
                                                Width="90"
                                                Height="30"
                                                Margin="5"
                                                Click="Cancel_Click"/>
                                </StackPanel>
                        </Grid>
                </ScrollViewer>
        </Border>
</Window>
