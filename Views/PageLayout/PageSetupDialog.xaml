<Window x:Class="KannadaNudiEditor.PageSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource EnterMarginsTitle}"
        Width="280"
        Height="400"
        MinWidth="300"
        MinHeight="400"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="8"
            Padding="10"
            Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Instruction -->
                    <RowDefinition Height="Auto"/>
                    <!-- Caption -->
                    <RowDefinition Height="Auto"/>
                    <!-- Tip -->
                    <RowDefinition Height="Auto"/>
                    <!-- Unit selector row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Page Width -->
                    <RowDefinition Height="Auto"/>
                    <!-- Page Height -->
                    <RowDefinition Height="*"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Instruction -->
                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="{DynamicResource EnterMarginInstruction}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- Caption: Unit Selection -->
                <TextBlock Grid.Row="1"
                           Grid.ColumnSpan="2"
                           Text="{DynamicResource SelectUnitCaption}"
                           FontSize="13"
                           FontWeight="Bold"
                           Foreground="#444"
                           Margin="0,5,0,0"/>

                <!-- Tip Text -->
                <TextBlock Grid.Row="2"
                           Grid.ColumnSpan="2"
                           Text="{DynamicResource UnitTipText}"
                           FontSize="12"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <!-- Unit Selector -->
                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="{DynamicResource UnitSelectUnit}"
                           VerticalAlignment="Center"
                           Margin="0,4"/>
                <ComboBox Grid.Row="3"
                          Grid.Column="1"
                          x:Name="UnitSelector"
                          Height="26"
                          Margin="0,4">
                    <ComboBoxItem Content="{DynamicResource PageUnitCentimeters}"/>
                    <ComboBoxItem Content="{DynamicResource PageUnitMillimeters}"/>
                    <ComboBoxItem Content="{DynamicResource PageUnitInches}"
                                  IsSelected="True"/>
                </ComboBox>

                <!-- Page Width -->
                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Text="{DynamicResource PageWidthLabel}"
                           VerticalAlignment="Center"
                           Margin="0,4"/>
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         x:Name="WidthBox"
                         Height="26"
                         Margin="0,4"/>

                <!-- Page Height -->
                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Text="{DynamicResource PageHeightLabel}"
                           VerticalAlignment="Center"
                           Margin="0,4"/>
                <TextBox Grid.Row="5"
                         Grid.Column="1"
                         x:Name="HeightBox"
                         Height="26"
                         Margin="0,4"/>

                <!-- Spacer -->
                <Grid Grid.Row="6"
                      Grid.ColumnSpan="2"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="7"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <Button Content="{DynamicResource OkButton}"
                            Width="80"
                            Height="28"
                            Margin="5"
                            Click="OK_Click"/>
                    <Button Content="{DynamicResource CancelButton}"
                            Width="80"
                            Height="28"
                            Margin="5"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
