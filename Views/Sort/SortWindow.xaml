<Window x:Class="KannadaNudiEditor.Views.Sort.SortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Sort}"
        MinHeight="500"
        MinWidth="700"
        Height="550"
        Width="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sort By -->
            <RowDefinition Height="Auto"/>
            <!-- Then By 1 -->
            <RowDefinition Height="Auto"/>
            <!-- Then By 2 -->
            <RowDefinition Height="Auto"/>
            <!-- My List Has -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Sort By Group -->
        <GroupBox Header="{DynamicResource SortBy}"
                FontWeight="Bold"
                Grid.Row="0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="sortByField"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        SelectedIndex="0">
                    <ComboBoxItem Content="{DynamicResource Paragraphs}"/>
                    <ComboBoxItem Content="{DynamicResource Headings}"/>
                    <ComboBoxItem Content="{DynamicResource Field1}"/>
                </ComboBox>

                <TextBlock Text="{DynamicResource Type}"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="10,0"/>
                <ComboBox x:Name="sortByType"
                        Grid.Column="2"
                        Margin="5,0">
                    <ComboBoxItem Content="{DynamicResource Text}"/>
                    <ComboBoxItem Content="{DynamicResource Number}"/>
                    <ComboBoxItem Content="{DynamicResource Date}"/>
                </ComboBox>

                <StackPanel Grid.Column="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                    <RadioButton x:Name="sortByAsc"
                            Content="{DynamicResource Ascending}"
                            IsChecked="True"
                            Margin="10,0"/>
                    <RadioButton x:Name="sortByDesc"
                            Content="{DynamicResource Descending}"
                            Margin="10,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Then By Group 1 -->
        <GroupBox Header="{DynamicResource ThenBy}"
                FontWeight="Bold"
                Grid.Row="1"
                Padding="10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="thenByField1"
                        Grid.Column="0"
                        Margin="0,0,10,0"/>
                <TextBlock Text="{DynamicResource Type}"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="10,0"/>
                <ComboBox x:Name="thenByType1"
                        Grid.Column="2"
                        Margin="5,0"/>
                <StackPanel Grid.Column="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                    <RadioButton x:Name="thenByAsc1"
                            Content="{DynamicResource Ascending}"
                            IsChecked="True"
                            Margin="10,0"/>
                    <RadioButton x:Name="thenByDesc1"
                            Content="{DynamicResource Descending}"
                            Margin="10,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Then By Group 2 -->
        <GroupBox Header="{DynamicResource ThenBy}"
                FontWeight="Bold"
                Grid.Row="2"
                Padding="10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="thenByField2"
                        Grid.Column="0"
                        Margin="0,0,10,0"/>
                <TextBlock Text="{DynamicResource Type}"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="10,0"/>
                <ComboBox x:Name="thenByType2"
                        Grid.Column="2"
                        Margin="5,0"/>
                <StackPanel Grid.Column="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                    <RadioButton x:Name="thenByAsc2"
                            Content="{DynamicResource Ascending}"
                            IsChecked="True"
                            Margin="10,0"/>
                    <RadioButton x:Name="thenByDesc2"
                            Content="{DynamicResource Descending}"
                            Margin="10,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- My List Has Group -->
        <GroupBox Header="{DynamicResource MyListHas}"
                FontWeight="Bold"
                Grid.Row="3"
                Padding="10"
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="hasHeaderRow"
                        Content="{DynamicResource HeaderRow}"
                        IsChecked="True"
                        GroupName="Header"/>
                <RadioButton x:Name="noHeaderRow"
                        Content="{DynamicResource NoHeaderRow}"
                        GroupName="Header"
                        Margin="20,0,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Spacer -->
        <Grid Grid.Row="4"/>

        <!-- OK / Cancel Buttons -->
        <StackPanel Grid.Row="5"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,20,0,0">
            <Button Content="{DynamicResource OK}"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"/>
            <Button Content="{DynamicResource Cancel}"
                    Width="90"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
