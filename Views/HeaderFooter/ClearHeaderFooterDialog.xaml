<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.ClearHeaderFooterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clear Header/Footer"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#FFF9F9F9"
        Padding="20">
        <StackPanel Orientation="Vertical"
                    Margin="10"
                    Width="320">
                <TextBlock Text="Select which headers/footers to clear:"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Margin="0,0,0,20"/>
                <RadioButton x:Name="rbClearAll"
                             Content="Clear headers/footers on all pages"
                             FontSize="15"
                             Margin="0,5"/>
                <RadioButton x:Name="rbClearEven"
                             Content="Clear headers/footers on even pages"
                             FontSize="15"
                             Margin="0,5"/>
                <RadioButton x:Name="rbClearFirst"
                             Content="Clear headers/footers on first page"
                             FontSize="15"
                             Margin="0,15"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                        <Button Content="Cancel"
                                Width="80"
                                Margin="5"
                                Click="Cancel_Click"/>
                        <Button Content="OK"
                                Width="80"
                                Margin="5"
                                Click="OK_Click"/>
                </StackPanel>
        </StackPanel>
</Window>