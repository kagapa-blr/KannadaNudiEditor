<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.HeaderFooterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Header/Footer" Height="250" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter Header/Footer Content:" Margin="0,0,0,5"/>
            <TextBox x:Name="TextInput" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Margin="5" IsDefault="True" Click="Ok_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
