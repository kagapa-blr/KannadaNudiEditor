<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.HeaderFooterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sf="clr-namespace:Syncfusion.Windows.Controls.RichTextBoxAdv;assembly=Syncfusion.SfRichTextBoxAdv.WPF"
        Title="Header and Footer Editor"
        Height="500"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14"
        ResizeMode="CanResizeWithGrip">

        <Grid Margin="16">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Label -->
                <TextBlock Text="Header"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,0,0,6"/>
                <!-- Header Editor -->
                <Border Grid.Row="1"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="#C4C4C4"
                        Background="White"
                        Padding="2"
                        Margin="0,0,0,10"
                        SnapsToDevicePixels="True">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="6"
                                                  ShadowDepth="2"
                                                  Opacity="0.15"/>
                        </Border.Effect>
                        <sf:SfRichTextBoxAdv x:Name="HeaderEditor"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             EnableMiniToolBar="True"
                                             LayoutType="Continuous"
                                             Padding="6"/>
                </Border>

                <!-- Footer Label -->
                <TextBlock Text="Footer"
                           Grid.Row="2"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,8,0,6"/>
                <!-- Footer Editor -->
                <Border Grid.Row="3"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="#C4C4C4"
                        Background="White"
                        Padding="2"
                        Margin="0,0,0,10"
                        SnapsToDevicePixels="True">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="6"
                                                  ShadowDepth="2"
                                                  Opacity="0.15"/>
                        </Border.Effect>
                        <sf:SfRichTextBoxAdv x:Name="FooterEditor"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             EnableMiniToolBar="True"
                                             LayoutType="Continuous"
                                             Padding="6"/>
                </Border>




                <!-- Buttons -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                        <!-- Apply Button -->
                        <Button Width="140"
                                Height="40"
                                Margin="0,0,10,0"
                                Background="#0078D7"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="ApplyButton_Click"
                                FocusVisualStyle="{x:Null}">
                                <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Button.Template>
                                <Button.Content>Apply</Button.Content>
                        </Button>

                        <!-- Cancel Button -->
                        <Button Width="140"
                                Height="40"
                                Background="#E5E5E5"
                                Foreground="Black"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="CancelButton_Click"
                                FocusVisualStyle="{x:Null}">
                                <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Button.Template>
                                <Button.Content>Cancel</Button.Content>
                        </Button>
                </StackPanel>

        </Grid>
</Window>
