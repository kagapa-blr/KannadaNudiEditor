<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.HeaderFooterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sf="clr-namespace:Syncfusion.Windows.Controls.RichTextBoxAdv;assembly=Syncfusion.SfRichTextBoxAdv.WPF"
        Title="Header &amp; Footer Editor"
        Height="480"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

        <Grid Margin="16">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Header"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,0,0,4"/>
                <sf:SfRichTextBoxAdv x:Name="HeaderEditor"
                                     Grid.Row="1"
                                     Background="White"
                                     BorderBrush="#C4C4C4"
                                     BorderThickness="1"
                                     EnableMiniToolBar="True"/>

                <TextBlock Text="Footer"
                           Grid.Row="2"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,10,0,4"/>
                <sf:SfRichTextBoxAdv x:Name="FooterEditor"
                                     Grid.Row="3"
                                     Background="White"
                                     BorderBrush="#C4C4C4"
                                     BorderThickness="1"
                                     EnableMiniToolBar="True"/>

                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                        <Button Content="Apply"
                                Width="120"
                                Margin="0,0,8,0"
                                Background="#0078D7"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="8"
                                Click="ApplyButton_Click"/>
                        <Button Content="Cancel"
                                Width="120"
                                Background="#E5E5E5"
                                Foreground="Black"
                                Padding="8"
                                Click="CancelButton_Click"/>
                </StackPanel>
        </Grid>
</Window>
