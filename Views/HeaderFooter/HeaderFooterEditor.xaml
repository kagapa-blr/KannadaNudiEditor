<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.HeaderFooterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sf="clr-namespace:Syncfusion.Windows.Controls.RichTextBoxAdv;assembly=Syncfusion.SfRichTextBoxAdv.WPF"
        Title="Header and Footer Editor"
        Height="550"
        Width="650"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FontFamily="NudiParijataha"
        FontSize="14"
        ResizeMode="CanResizeWithGrip"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

        <Grid Margin="16">

                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Info Guide -->
                        <RowDefinition Height="Auto"/>
                        <!-- Header Label -->
                        <RowDefinition Height="*"/>
                        <!-- Header Editor -->
                        <RowDefinition Height="Auto"/>
                        <!-- Footer Label -->
                        <RowDefinition Height="*"/>
                        <!-- Footer Editor -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- INFO GUIDE BOX (Dynamic language) -->
                <!-- â­ Improved Multi-Line Info Guide Panel -->
                <Border Grid.Row="0"
                        Background="#F7F9FC"
                        BorderBrush="#D6DFEA"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="14"
                        Margin="0,0,0,16"
                        SnapsToDevicePixels="True">

                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="28"/>
                                        <!-- Icon Column -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Text Column -->
                                </Grid.ColumnDefinitions>

                                <!-- Info Icon Circle -->
                                <Border Width="24"
                                        Height="24"
                                        Background="#E3ECF7"
                                        CornerRadius="12"
                                        VerticalAlignment="Top">
                                        <TextBlock Text="i"
                                                   Foreground="#2A64A5"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"/>
                                </Border>

                                <!-- Guide Text -->
                                <TextBlock Grid.Column="1"
                                           Text="{DynamicResource HeaderFooterInfoGuide}"
                                           Margin="12,2,0,0"
                                           FontSize="13.5"
                                           TextWrapping="Wrap"
                                           Foreground="#333"
                                           LineHeight="20"
                                           TextTrimming="None"/>
                        </Grid>

                </Border>

                <!-- Header Label -->
                <TextBlock Text="Header"
                           Grid.Row="1"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,0,0,6"/>

                <!-- Header Editor -->
                <Border Grid.Row="2"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="#C4C4C4"
                        Background="White"
                        Padding="2"
                        Margin="0,0,0,10"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="4"
                                                  ShadowDepth="0"
                                                  RenderingBias="Performance"
                                                  Opacity="0.10"/>
                        </Border.Effect>

                        <sf:SfRichTextBoxAdv x:Name="HeaderEditor"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             EnableMiniToolBar="True"
                                             LayoutType="Continuous"
                                             Padding="6"
                                             TextOptions.TextRenderingMode="ClearType"
                                             TextOptions.TextFormattingMode="Display"/>
                </Border>

                <!-- Footer Label -->
                <TextBlock Text="Footer"
                           Grid.Row="3"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,8,0,6"/>

                <!-- Footer Editor -->
                <Border Grid.Row="4"
                        CornerRadius="6"
                        BorderThickness="1"
                        BorderBrush="#C4C4C4"
                        Background="White"
                        Padding="2"
                        Margin="0,0,0,10"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="4"
                                                  ShadowDepth="0"
                                                  RenderingBias="Performance"
                                                  Opacity="0.10"/>
                        </Border.Effect>

                        <sf:SfRichTextBoxAdv x:Name="FooterEditor"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             EnableMiniToolBar="True"
                                             LayoutType="Continuous"
                                             Padding="6"
                                             TextOptions.TextRenderingMode="ClearType"
                                             TextOptions.TextFormattingMode="Display"/>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">

                        <!-- Apply Button -->
                        <Button Width="140"
                                Height="40"
                                Margin="0,0,10,0"
                                Background="#0078D7"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="ApplyButton_Click"
                                FocusVisualStyle="{x:Null}">
                                <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Button.Template>
                                <Button.Content>Apply</Button.Content>
                        </Button>

                        <!-- Cancel Button -->
                        <Button Width="140"
                                Height="40"
                                Background="#E5E5E5"
                                Foreground="Black"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="CancelButton_Click"
                                FocusVisualStyle="{x:Null}">
                                <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Button.Template>
                                <Button.Content>Cancel</Button.Content>
                        </Button>

                </StackPanel>

        </Grid>
</Window>
