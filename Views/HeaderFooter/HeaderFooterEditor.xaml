<Window x:Class="KannadaNudiEditor.Views.HeaderFooter.HeaderFooterEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Header/Footer Editor"
        Height="300"
        Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Header Text Input -->
            <TextBlock Text="Enter Header Text"
                    Margin="0,10"/>
            <TextBox x:Name="HeaderTextBox"
                    Margin="0,5"
                    Height="30"/>

            <!-- Footer Text Input -->
            <TextBlock Text="Enter Footer Text"
                    Margin="0,10"/>
            <TextBox x:Name="FooterTextBox"
                    Margin="0,5"
                    Height="30"/>

            <!-- Apply Button -->
            <Button Content="Apply"
                    Margin="0,20"
                    Height="40"
                    Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
