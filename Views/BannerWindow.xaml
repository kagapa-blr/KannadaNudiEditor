<Window x:Class="KannadaNudiEditor.Views.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nudi Editor - Loading"
        Height="320"
        Width="540"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border Background="White"
            CornerRadius="18"
            Padding="30"
            SnapsToDevicePixels="True"
            BorderBrush="#DDD"
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="ನುಡಿ ಸಂಪಾದಕ"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="#2E3B4E"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

            <!-- Subtitle -->
            <TextBlock Text="Nudi Editor is loading, please wait..."
                       FontSize="15"
                       FontStyle="Italic"
                       Foreground="#555"
                       HorizontalAlignment="Center"
                       Grid.Row="1"
                       Margin="0,0,0,20"/>

            <!-- Progress bar (no CornerRadius) -->
            <ProgressBar Grid.Row="2"
                         Height="8"
                         Margin="40,0,40,0"
                         IsIndeterminate="True"
                         Foreground="#0078D7"
                         Background="#EDEDED"
                         BorderThickness="0"/>

            <!-- Footer -->
            <TextBlock Grid.Row="3"
                       Text="ಕನ್ನಡ ಗಣಕ ಪರಿಷತ್ತು – Developed and maintained by"
                       FontSize="12"
                       Foreground="#888"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
