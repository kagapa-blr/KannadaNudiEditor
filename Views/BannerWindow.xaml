<Window x:Class="KannadaNudiEditor.Views.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nudi Editor - Loading"
        Height="280"
        Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    
    <Border Background="White"
            CornerRadius="16"
            Padding="20"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Title -->
            <TextBlock Text="ನುಡಿ ಸಂಪಾದಕ"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2E3B4E"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,4"/>

            <!-- Subheading -->
            <TextBlock Text="Nudi Editor is loading, please wait..."
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="0,4,0,20"/>

            <!-- Indeterminate ProgressBar -->
            <ProgressBar Grid.Row="2"
                         Height="6"
                         Margin="30,0,30,10"
                         IsIndeterminate="True"
                         Foreground="#007ACC"
                         Background="#EEE"
                         BorderThickness="0"/>
        </Grid>
    </Border>
</Window>
