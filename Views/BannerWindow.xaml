<Window x:Class="KannadaNudiEditor.Views.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nudi Editor - Loading"
        Height="250"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Opacity="0.95">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="ನುಡಿ ಸಂಪಾದಕ ಲೋಡ್ ಆಗುತ್ತಿದೆ..."
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="10"/>
            <TextBlock Text="Nudi Editor is loading, please wait..."
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
