<Window x:Class="KannadaNudiEditor.Views.BannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nudi Editor - Loading"
        Height="320"
        Width="540"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border CornerRadius="18"
            Padding="30"
            SnapsToDevicePixels="True"
            BorderBrush="#DDD"
            BorderThickness="1">

        <!-- Karnataka-inspired gradient background -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0"
                    EndPoint="0,1">
                <GradientStop Color="#FFEB3B"
                        Offset="0.0"/>
                <!-- Brighter Yellow -->
                <GradientStop Color="#E53935"
                        Offset="1.0"/>
                <!-- Rich Red -->
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="ನುಡಿ ಸಂಪಾದಕ"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#1B2A41"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black"
                            BlurRadius="4"
                            ShadowDepth="1"
                            Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Subtitle -->
            <TextBlock Text="Nudi Editor is loading, please wait..."
                       FontSize="16"
                       FontStyle="Italic"
                       Foreground="#2E3B4E"
                       HorizontalAlignment="Center"
                       Grid.Row="1"
                       Margin="0,0,0,25"/>

            <!-- Progress bar -->
            <ProgressBar Grid.Row="2"
                         Height="10"
                         Margin="40,0,40,0"
                         IsIndeterminate="True"
                         Foreground="#0078D7"
                         Background="#EDEDED"
                         BorderThickness="0"/>

            <!-- Footer -->
            <TextBlock Grid.Row="3"
                       Text="ಕನ್ನಡ ಗಣಕ ಪರಿಷತ್ತು – Developed and maintained by KAGAPA"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#1B2A41"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
