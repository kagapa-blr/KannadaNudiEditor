<Window x:Class="KannadaNudiEditor.CustomMargin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KannadaNudiEditor"
        mc:Ignorable="d"
        Title="Enter Margins" Height="220" Width="300" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Left:" Width="60"/>
            <TextBox x:Name="LeftMarginTextBox" Height="20" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
            <TextBlock Text="Top:" Width="60"/>
            <TextBox x:Name="TopMarginTextBox" Height="20" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
            <TextBlock Text="Right:" Width="60"/>
            <TextBox x:Name="RightMarginTextBox" Height="20" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
            <TextBlock Text="Bottom:" Width="60"/>
            <TextBox x:Name="BottomMarginTextBox" Height="20" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Height="20" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Height="20" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>

</Window>
