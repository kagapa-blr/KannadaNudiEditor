<Syncfusion:RibbonWindow
    x:Class="KannadaNudiEditor.MainWindow"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:this="clr-namespace:KannadaNudiEditor"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    syncfusionskin:SfSkinManager.VisualStyle="Windows11Light"
    mc:Ignorable="d"
    SnapsToDevicePixels="True"
    IsGlassActive="False"
    Icon="Images/nudi.png"
    x:Name="ribbonWindow"
    Title="{Binding DocumentTitle}"
    WindowState="Maximized"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    Closing="ribbonWindow_Closing">


    <Syncfusion:RibbonWindow.Resources>
        <Syncfusion:FontFamilyStringConverter x:Key="FontFamilyStringConverter"/>
        <Syncfusion:LeftAlignmentToggleConverter x:Key="LeftAlignmentToggleConverter"/>
        <Syncfusion:CenterAlignmentToggleConverter x:Key="CenterAlignmentToggleConverter"/>
        <Syncfusion:RightAlignmentToggleConverter x:Key="RightAlignmentToggleConverter"/>
        <Syncfusion:JustifyAlignmentToggleConverter x:Key="JustifyAlignmentToggleConverter"/>
        <Syncfusion:SingleStrikeThroughToggleConverter x:Key="SingleStrikeThroughToggleConverter"/>
        <Syncfusion:DoubleStrikeThroughToggleConverter x:Key="DoubleStrikeThroughToggleConverter"/>
        <Syncfusion:SubscriptToggleConverter x:Key="SubscriptToggleConverter"/>
        <Syncfusion:SuperscriptToggleConverter x:Key="SuperscriptToggleConverter"/>
        <Syncfusion:UnderlineToggleConverter x:Key="UnderlineToggleConverter"/>
        <Syncfusion:LineSpacingTypeStringConverter x:Key="LineSpacingTypeStringConverter"/>
        <Syncfusion:DoubleStringConverter x:Key="DoubleStringConverter"/>
        <Syncfusion:HighlightColorToggleConverter x:Key="HighlightColorToggleConverter"/>
        <this:LineSpacingToggleConverter x:Key="LineSpacingToggleConverter"/>
        <this:PercentageDoubleConverter x:Key="PercentageDoubleConverter"/>
        <this:PercentageStringConverter x:Key="PercentageStringConverter"/>
        <Style x:Key="StatusBarRibbonButtonStyle"
               TargetType="{x:Type Syncfusion:RibbonButton}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="CornerRadius"
                    Value="2"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Foreground"
                    Value="#FF00156E"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="Label"
                    Value="New Button"/>
            <Setter Property="LargeIcon">
                <Setter.Value>
                    <BitmapImage UriSource="pack://application:,,,/Syncfusion.Tools.WPF;component/Framework/Ribbon/Resources/WordArt32.png"/>
                </Setter.Value>
            </Setter>
            <Setter Property="SmallIcon">
                <Setter.Value>
                    <BitmapImage UriSource="pack://application:,,,/Syncfusion.Tools.WPF;component/Framework/Ribbon/Resources/WordArt16.png"/>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="SizeForm"
                         Value="ExtraSmall">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Syncfusion:RibbonButton}">
                                <Border x:Name="Bd"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        IsEnabled="True"
                                        MinHeight="22"
                                        Opacity="{TemplateBinding Opacity}">
                                    <Image x:Name="PART_Image"
                                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           IsEnabled="True"
                                           Height="16"
                                           Margin="2"
                                           Source="{Binding SmallIcon, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                           Stretch="{Binding IconStretch, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           Width="16"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                TargetName="Bd"
                                                Value="#FF3E6DB5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed"
                                             Value="True">
                                        <Setter Property="Background"
                                                TargetName="Bd"
                                                Value="#FF19478A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Setter Property="Background"
                                                TargetName="Bd"
                                                Value="#FF19478A"/>
                                    </Trigger>
                                    <Trigger Property="Syncfusion:SkinStorage.EnableTouch"
                                             Value="True">
                                        <Setter Property="Padding"
                                                Value="5"/>
                                        <Setter Property="Height"
                                                TargetName="PART_Image"
                                                Value="20"/>
                                        <Setter Property="Width"
                                                TargetName="PART_Image"
                                                Value="20"/>
                                        <Setter Property="Width"
                                                TargetName="Bd"
                                                Value="47"/>
                                        <Setter Property="Height"
                                                TargetName="Bd"
                                                Value="30"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="Custom_HeaderTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid  x:Name="IconGrid"
                       Margin="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Name="color_border"
                            Grid.Row="0"
                            Height="12"
                            Width="12">
                        <Border.Background>
                            <SolidColorBrush Color="{Binding Color, 
                     RelativeSource={RelativeSource FindAncestor, 
                         AncestorLevel=1,
                         AncestorType={x:Type Syncfusion:ColorPickerPalette}}, 
                         UpdateSourceTrigger=PropertyChanged}"/>
                        </Border.Background>
                    </Border>
                </Grid>
                <TextBlock Padding="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Grid.Column="1"
                           Text="Page Color"
                           FontSize="11"
                           Width="auto"/>
            </Grid>
        </DataTemplate>
    </Syncfusion:RibbonWindow.Resources>




    <Syncfusion:RibbonWindow.StatusBar>
        <Syncfusion:RibbonStatusBar Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <!-- Page Info -->
                    <ColumnDefinition Width="100"/>
                    <!-- Word Count -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Language Toggle -->
                    <ColumnDefinition Width="*"/>
                    <!-- Layout & Zoom -->
                </Grid.ColumnDefinitions>

                <!-- Page Info -->
                <StackPanel HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Margin="10,0,0,5"
                               FontSize="12"
                               ToolTip="{DynamicResource PageNumberTooltip}">
                    <this:RunAdv RunText="{DynamicResource PageLabel}"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    <this:RunAdv x:Name="currentPageNumberRun"
                                 Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                    <this:RunAdv RunText="/"
                                 Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Syncfusion:RibbonStatusBar}}}"/>
                    <this:RunAdv x:Name="pagecountRun"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Word Count -->
                <StackPanel HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Grid.Column="1">
                    <TextBlock Margin="10,0,0,5"
                               FontSize="12"
                               ToolTip="{DynamicResource WordCountTooltip}">
                    <this:RunAdv x:Name="totalWords"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    <this:RunAdv RunText="{DynamicResource WordsLabel}"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Language Switch -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Grid.Column="2"
                            Margin="0,0,10,0">
                    <ToggleButton x:Name="LanguageToggleButton"
                                  Width="100"
                                  Height="26"
                                  FontSize="14"
                                  FontFamily="Tunga"
                                  Content="ಕ"
                                  ToolTip="{DynamicResource LanguageSwitchTooltip}"
                                  Checked="LanguageToggleButton_Checked"
                                  Unchecked="LanguageToggleButton_Unchecked"/>

                </StackPanel>

                <!-- Layout & Zoom -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Grid.Column="3">
                    <Syncfusion:RibbonButton Style="{StaticResource StatusBarRibbonButtonStyle}"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Assets/PrintLayout.png"
                                             Command="Syncfusion:SfRichTextBoxAdv.LayoutTypeCommand"
                                             CommandTarget="{Binding ElementName=richTextBoxAdv}"
                                             CommandParameter="Pages"
                                             ToolTip="{DynamicResource PrintLayoutTooltip}"/>
                    <Syncfusion:RibbonButton Style="{StaticResource StatusBarRibbonButtonStyle}"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Assets/WebLayout.png"
                                             Command="Syncfusion:SfRichTextBoxAdv.LayoutTypeCommand"
                                             CommandTarget="{Binding ElementName=richTextBoxAdv}"
                                             CommandParameter="Continuous"
                                             ToolTip="{DynamicResource WebLayoutTooltip}"/>
                    <TextBlock FontSize="12"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0">
                    <this:RunAdv RunText="{Binding ZoomFactor, Mode=OneWay, Converter={StaticResource PercentageStringConverter}}"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    <this:RunAdv RunText="%"
                                 Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"/>
                    </TextBlock>
                    <Slider x:Name="rangeslider"
                            Focusable="False"
                            Value="{Binding ZoomFactor, Mode=TwoWay, Converter={StaticResource PercentageDoubleConverter}}"
                            Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Syncfusion:RibbonStatusBar}}"
                            TickFrequency="0.1"
                            Width="150"
                            TickPlacement="None"
                            Minimum="0.1"
                            Maximum="5"
                            ToolTip="{DynamicResource ZoomTooltip}"/>
                </StackPanel>
            </Grid>
        </Syncfusion:RibbonStatusBar>
    </Syncfusion:RibbonWindow.StatusBar>

    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Syncfusion:Ribbon x:Name="ribbon"
                           SnapsToDevicePixels="True"
                           DataContext="{Binding ElementName=richTextBoxAdv}">
            <Syncfusion:Ribbon.QuickAccessToolBar>
                <Syncfusion:QuickAccessToolBar>
                    <Syncfusion:RibbonButton Label="Undo"
                                             Command="Syncfusion:SfRichTextBoxAdv.UndoCommand"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Images/QAT/Undo16.png"
                                             ToolTip="Undo (Ctrl + Z)"/>
                    <Syncfusion:RibbonButton Label="Redo"
                                             Command="Syncfusion:SfRichTextBoxAdv.RedoCommand"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Images/QAT/Redo16.png"
                                             ToolTip="Redo (Ctrl + Y)"/>
                    <Syncfusion:RibbonButton Label="Save"
                                             Command="Syncfusion:SfRichTextBoxAdv.SaveDocumentCommand"
                                             SizeForm="ExtraSmall"
                                             SmallIcon="/Images/QAT/Save16.png"
                                             ToolTip="Save (Ctrl + S)"/>
                </Syncfusion:QuickAccessToolBar>
            </Syncfusion:Ribbon.QuickAccessToolBar>


            <Syncfusion:Ribbon.BackStage>
                <Syncfusion:Backstage>
                    <Syncfusion:BackstageTabItem Header="{DynamicResource backStageInfo}">
                        <!--Back Stage tab item content can be of any type.-->
                        <Grid Margin="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{DynamicResource backStageInformation}"
                                           FontFamily="NudiParijatha"
                                           FontSize="20"
                                           Margin="10"/>
                                <Rectangle Grid.Row="1"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                                <Grid Grid.Row="2"
                                      Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Syncfusion:DropDownButton Width="87"
                                                               Height="80"
                                                               SizeForm="Large"
                                                               Label="{DynamicResource backStageProtectDocument}"
                                                               LargeIcon="/Images/Backstage/Protect.png"
                                                               Margin="5"
                                                               BorderThickness="1">
                                        <Syncfusion:SimpleMenuButton x:Name="PART_BackstageRestrictEditingButton"
                                                                     Icon="Images/Home/Editing/RestrictEditing.png"
                                                                     IconSize="30,30"
                                                                     Label="RestrictEditing"
                                                                     Description="{DynamicResource backStageRestrictEditingDescription}"/>
                                        <Syncfusion:SimpleMenuButton x:Name="backstageEncryptDocumentButton"
                                                                     Icon="Images/Backstage/Protect.png"
                                                                     IconSize="30,30"
                                                                     Label="{DynamicResource backStageEncryptWithPassword}"
                                                                     Description="{DynamicResource backStageEncryptWithPasswordDescription}"
                                                                     Command="Syncfusion:SfRichTextBoxAdv.ShowEncryptDocumentDialogCommand"/>
                                    </Syncfusion:DropDownButton>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Margin="3">
                                        <TextBlock Text="ProtectDocument"
                                                   Grid.Column="1"
                                                   FontWeight="Bold"
                                                   Margin="3"/>
                                        <TextBlock Text="{DynamicResource backStageControlChangesText}"
                                                   Grid.Column="1"
                                                   TextWrapping="Wrap"
                                                   Margin="3"/>
                                    </StackPanel>
                                </Grid>
                                <Rectangle Grid.Row="3"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                            </Grid>
                            <Border BorderThickness="0.5"
                                    BorderBrush="#FFBCBCBC"
                                    Margin="15"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"/>
                            <Grid  Grid.Column="2">
                                <Button x:Name="rteButton"
                                        Margin="20 30"
                                        Height="250"
                                        Width="390"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border x:Name="Border"
                                                                    Background="Gray"
                                                                    Opacity="0.1">
                                                                <Border.BitmapEffect>
                                                                    <BlurBitmapEffect/>
                                                                </Border.BitmapEffect>
                                                            </Border>
                                                            <ContentPresenter Margin="3"/>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver"
                                                                     Value="True">
                                                                <Setter Property="Opacity"
                                                                        TargetName="Border"
                                                                        Value="0.5"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Image Source="/Images/RTE.png"
                                           Stretch="Fill"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </Syncfusion:BackstageTabItem>
                    <Syncfusion:BackstageTabItem Header="{DynamicResource backStageNew}">
                        <Grid Margin="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="AvailableTemplates"
                                           FontFamily="NudiParijatha"
                                           FontSize="20"
                                           Margin="10"/>
                                <Rectangle Grid.Row="1"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                                <Grid Grid.Row="2"
                                      Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Syncfusion:RibbonButton x:Name="backstageNewDocumentButton"
                                                             SizeForm="Large"
                                                             LargeIcon="Images/Backstage/New32.png"
                                                             Command="Syncfusion:SfRichTextBoxAdv.NewDocumentCommand"
                                                             Label="BlankDocument"
                                                             Width="92"
                                                             Height="80"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"/>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Margin="3">
                                        <TextBlock Text="BlankDocument"
                                                   Grid.Column="1"
                                                   FontWeight="Bold"
                                                   Margin="3"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="It creates the new empty document."
                                                   Grid.Column="1"
                                                   TextWrapping="Wrap"
                                                   Margin="3"/>
                                    </StackPanel>
                                </Grid>
                                <Rectangle Grid.Row="3"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                            </Grid>
                            <Border BorderThickness="0.5"
                                    BorderBrush="#FFBCBCBC"
                                    Margin="15"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"/>
                            <Grid Grid.Column="2"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Left"
                                  Margin="20,5,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="BlankDocument"
                                           FontWeight="Bold"/>
                                <Border Grid.Row="1"
                                        Margin="0,10,0,0"
                                        Height="340"
                                        Width="240"
                                        BorderThickness="1"
                                        BorderBrush="Black"
                                        Background="#FFFFFF"/>
                                <Syncfusion:RibbonButton x:Name="createDocumentButton"
                                                         Grid.Row="2"
                                                         Width="80"
                                                         Margin="0,10,0,0"
                                                         Label="Path=Create"
                                                         Command="Syncfusion:SfRichTextBoxAdv.NewDocumentCommand"
                                                         SizeForm="Large"
                                                         BorderBrush="#FFA1A2A4"
                                                         BorderThickness="1"
                                                         LargeIcon="/Images/Backstage/New32.png"
                                                         HorizontalAlignment="Left"/>
                            </Grid>
                        </Grid>
                    </Syncfusion:BackstageTabItem>
                    <Syncfusion:BackStageCommandButton  x:Name="backstageOpenButton"
                                                        Header="{DynamicResource backStageOpen}"
                                                        Command="Syncfusion:SfRichTextBoxAdv.OpenDocumentCommand"/>
                    <Syncfusion:BackStageCommandButton x:Name="backstageSaveButton"
                                                       Header="{DynamicResource backStageSave}"
                                                       Command="Syncfusion:SfRichTextBoxAdv.SaveDocumentCommand"/>
                    <Syncfusion:BackStageCommandButton x:Name="backstageSaveAsButton"
                                                       Header="{DynamicResource backStageSaveAs}"
                                                       Command="Syncfusion:SfRichTextBoxAdv.SaveAsDocumentCommand"/>
                    <Syncfusion:BackStageCommandButton  x:Name="backstagePrintButton"
                                                        Header="{DynamicResource backStagePrint}"
                                                        Command="Syncfusion:SfRichTextBoxAdv.PrintDocumentCommand"/>
                    <Syncfusion:BackstageTabItem Header="{DynamicResource backStageHelp}">
                        <Grid Margin="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="UserInterfaceHelp"
                                           FontFamily="NudiParijatha"
                                           FontSize="20"
                                           Margin="10"/>
                                <Rectangle Grid.Row="1"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                                <Grid Grid.Row="2"
                                      Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Syncfusion:RibbonButton x:Name="onlineHelpButton"
                                                             SizeForm="Large"
                                                             Width="87"
                                                             LargeIcon="/Images/Backstage/Help.png"
                                                             Height="80"
                                                             Label="OnlineHelp"
                                                             Margin="5"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"/>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Margin="3">
                                        <TextBlock Text="OnlineHelp"
                                                   Grid.Column="1"
                                                   FontWeight="Bold"
                                                   Margin="3"/>
                                        <TextBlock Text="UG documents helps understanding the usage of our Syncfusion UI components."
                                                   Grid.Column="1"
                                                   TextWrapping="Wrap"
                                                   Margin="3"/>
                                    </StackPanel>
                                </Grid>
                                <Rectangle Grid.Row="3"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                                <Grid Grid.Row="4"
                                      Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Syncfusion:RibbonButton x:Name="gettingStartedButton"
                                                             SizeForm="Large"
                                                             Width="87"
                                                             Height="80"
                                                             Margin="5"
                                                             LargeIcon="/Images/Backstage/Started.png"
                                                             Label="GettingStarted"
                                                             BorderBrush="#FFA1A2A4"
                                                             BorderThickness="1"/>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Margin="3">
                                        <TextBlock Text="GettingStarted"
                                                   Grid.Column="1"
                                                   FontWeight="Bold"
                                                   Margin="3"/>
                                        <TextBlock Text="A complete information on Syncfusion RichTextBox control and its usage."
                                                   Grid.Column="1"
                                                   TextWrapping="Wrap"
                                                   Margin="3"/>
                                    </StackPanel>
                                </Grid>
                                <Rectangle Grid.Row="5"
                                           Stroke="Gray"
                                           HorizontalAlignment="Stretch"
                                           StrokeThickness="1"
                                           StrokeDashArray="5"
                                           Margin="10"
                                           Height="1"/>
                            </Grid>
                            <Border BorderThickness="0.5"
                                    BorderBrush="#FFBCBCBC"
                                    Margin="15"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </Syncfusion:BackstageTabItem>
                </Syncfusion:Backstage>
            </Syncfusion:Ribbon.BackStage>



            <Syncfusion:RibbonTab  Caption="{DynamicResource HomeTab}">

                <Syncfusion:RibbonBar Header="{DynamicResource Clipboard}"
                                      IsLauncherButtonVisible="False">

                    <!-- Paste Button -->
                    <Syncfusion:RibbonButton Margin="5"
                                             SizeForm="Large"
                                             Label="{DynamicResource Paste}"
                                             IsToggle="False"
                                             LargeIcon="/Images/Home/Clipboard/Paste32.png"
                                             Command="Syncfusion:SfRichTextBoxAdv.PasteCommand">
                        <Syncfusion:RibbonButton.ToolTip>
                            <Syncfusion:ScreenTip Description="{DynamicResource PasteShortcut}"
                                                  MaxWidth="250">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource PasteTipLine1}"/>
                                    <TextBlock Text="{DynamicResource PasteTipLine2}"/>
                                </StackPanel>
                            </Syncfusion:ScreenTip>
                        </Syncfusion:RibbonButton.ToolTip>
                    </Syncfusion:RibbonButton>

                    <!-- Cut Button -->
                    <Syncfusion:RibbonButton Margin="3"
                                             SizeForm="Small"
                                             Label="{DynamicResource Cut}"
                                             HorizontalAlignment="Left"
                                             IsToggle="False"
                                             SmallIcon="/Images/Home/Clipboard/Cut16.png"
                                             Command="Syncfusion:SfRichTextBoxAdv.CutCommand">
