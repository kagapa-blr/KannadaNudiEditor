                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Key}"
                                                   FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="2"
                                                       Text="{Binding top}"/>
                                            <TextBlock Margin="2"
                                                       Text="{Binding bottom}"/>
