<Window x:Class="KannadaNudiEditor.PageSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KannadaNudiEditor"
        mc:Ignorable="d"
       Title="Page Setup" Height="180" Width="300"
       WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Page Width (in inches):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="WidthBox" Width="100" Margin="5" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Page Height (in inches):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="HeightBox" Width="100" Margin="5" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Margin (in inches):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="MarginBox" Width="100" Margin="5" Grid.Row="2" Grid.Column="1"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Click="OK_Click" Margin="5"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
