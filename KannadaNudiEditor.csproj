<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>

    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <RootNamespace>KannadaNudiEditor</RootNamespace>
    <ApplicationIcon>Assets\nudi.ico</ApplicationIcon>

    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <CopyOutputSymbolsToPublishDirectory>false</CopyOutputSymbolsToPublishDirectory>
  </PropertyGroup>

  <!-- Include ENTIRE Assets folder recursively -->
  <ItemGroup>
    <Content Include="Assets\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Include ENTIRE Resources folder recursively (JSON mappings, etc.) -->
  <ItemGroup>
    <Content Include="Resources\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- WPF Images from Images folder -->
  <ItemGroup>
    <Resource Include="Images\**\*.png" />
  </ItemGroup>

  <!-- NuGet Packages -->
  <ItemGroup>
    <PackageReference Include="KannadaAsciiUnicodeSDK" Version="1.0.12" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Syncfusion.DocToPDFConverter.Wpf" Version="32.1.23" />
    <PackageReference Include="Syncfusion.SfRichTextBoxAdv.WPF" Version="32.1.23" />
    <PackageReference Include="Syncfusion.SfRichTextRibbon.WPF" Version="32.1.23" />
    <PackageReference Include="Syncfusion.SfSkinManager.WPF" Version="32.1.23" />
    <PackageReference Include="Syncfusion.Themes.Windows11Light.WPF" Version="32.1.23" />
  </ItemGroup>
</Project>
