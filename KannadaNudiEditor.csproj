<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>

    <!-- Optional but recommended -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- App Branding -->
    <RootNamespace>KannadaNudiEditor</RootNamespace>
    <ApplicationIcon>Assets\nudi.ico</ApplicationIcon>

    <!-- Improve build/publish consistency -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <!-- Ensures images, assets, exes are kept during publish -->
    <CopyOutputSymbolsToPublishDirectory>false</CopyOutputSymbolsToPublishDirectory>
  </PropertyGroup>

  <!-- EXEs and External Files -->
  <ItemGroup>
    <Content Include="Assets\kannadaKeyboard.exe" CopyToOutputDirectory="Always" />
    <Content Include="Assets\recognize_mic.exe" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="Assets\Custom_MyDictionary_kn_IN.dic" CopyToOutputDirectory="Always" />
    <Content Include="Assets\kn_IN.dic" CopyToOutputDirectory="Always" />
    <Content Include="Assets\default.dic" CopyToOutputDirectory="Always" />
  </ItemGroup>

  <!-- WPF Resources -->
  <ItemGroup>
    <Resource Include="Images\**\*.png" />
    <Resource Include="Assets\**\*.png" />
  </ItemGroup>

  <!-- NuGet Packages -->
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Syncfusion.DocToPDFConverter.Wpf" Version="31.2.16" />
    <PackageReference Include="Syncfusion.SfRichTextBoxAdv.WPF" Version="31.2.16" />
    <PackageReference Include="Syncfusion.SfRichTextRibbon.WPF" Version="31.2.16" />
    <PackageReference Include="Syncfusion.SfSkinManager.WPF" Version="31.2.16" />
    <PackageReference Include="Syncfusion.Themes.Windows11Light.WPF" Version="31.2.16" />
  </ItemGroup>
</Project>
